{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TradeResponse",
  "type": "object",
  "required": [
    "trade",
    "trade_id"
  ],
  "properties": {
    "trade": {
      "$ref": "#/definitions/Trade"
    },
    "trade_id": {
      "type": "integer",
      "format": "uint64",
      "minimum": 0.0
    }
  },
  "definitions": {
    "Trade": {
      "type": "object",
      "required": [
        "amount",
        "buyer",
        "buyer_escrow_funded",
        "created_at",
        "disputed",
        "offer_id",
        "payment_method",
        "seller",
        "status"
      ],
      "properties": {
        "amount": {
          "type": "integer",
          "format": "uint128",
          "minimum": 0.0
        },
        "buyer": {
          "type": "string"
        },
        "buyer_escrow_funded": {
          "type": "boolean"
        },
        "completed_at": {
          "type": [
            "integer",
            "null"
          ],
          "format": "uint64",
          "minimum": 0.0
        },
        "created_at": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "disputed": {
          "type": "boolean"
        },
        "offer_id": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0.0
        },
        "payment_confirmed_at": {
          "type": [
            "integer",
            "null"
          ],
          "format": "uint64",
          "minimum": 0.0
        },
        "payment_method": {
          "type": "string"
        },
        "seller": {
          "type": "string"
        },
        "status": {
          "$ref": "#/definitions/TradeStatus"
        }
      }
    },
    "TradeStatus": {
      "type": "string",
      "enum": [
        "Pending",
        "PaymentSent",
        "Completed",
        "Disputed",
        "Cancelled",
        "Resolved"
      ]
    }
  }
}
